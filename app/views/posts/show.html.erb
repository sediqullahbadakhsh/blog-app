<button class= "button"><%= link_to "Back to posts", user_posts_path %></button>
<div class = "container">
    <div class = "post-container">
        <div class="post-header">
            <p>
                <%= @post.title %> by
                <%= @post.author.name%>
            </p>
            <p><%= link_to "Add comment", new_user_post_path %></p>
            <p><%= link_to "Go back", url_for(:back) %></p>
            <p>
                Comments: <%= @post.comments_counter %>,
                Likes: <%= @post.likes_counter %>
            </p>
        </div>
        <p class = "post-text">
            <%= @post.text %>
        </p>

        <%= form_with(model: Like.new, url: post_likes_path(@post), method: :post ) do |f| %>
            <p>
                <%= f.submit "Like" %>
            </p>
        <% end %>

    </div>
    <div class="comment-section">
        <% @comment.each do |c|%>
            <p><%= c.user.name + ": " + c.text%></p>
        <%end%>   
    </div>

    <div class= "margin-left">
        <%= form_with(model: Comment.new, url: post_comments_path(@post), method: :post ) do |f| %>
            <h3>Add a new Comment</h3>
            <p>
                <%= f.text_field :text %>
            </p>
            <p>
                <%= f.submit %>
            </p>
        <% end %>
    </div>
</div>
