<div class = "container">
    <div class = "user-row">
        <div class = "photo">
            <%= image_tag @user.photo %>
        </div>
        <div class = "intro-details">
            <p class = "user-name"><%= @user.name %></p>
            <p class = "post-counter">Number of posts:<%= @user.posts_counter %></p>
        </div>
    </div>


    <% @user.posts.each do |p| %>
        <div class = "post-row">
            <p class ="post-title"> <%= p.title%></p>
            <p class ="post-text"><%= p.text%></p>
            <%= link_to 'view post', user_post_path(@user, p)%>
            <p class="counters"> Comments: <%= p.comments_counter%>,
            Likes: <%= p.likes_counter%></P>
        </div>
        <div class="comment-section">
            <% p.most_recent_comments.each do |c|%>
                    <P><%= c.user.name + ": " + c.text%></P>
            <% end %>
        </div>

    <%end%>
    <%= link_to 'Create New Post', new_user_post_path %> |
    <%= link_to 'Back to users', root_path %>
</div>
