<ul>
    <%= image_tag @user.photo %>
    <%= @user.name %>
    <%= @user.posts_counter %>
</ul>
<% @post.each do |p| %>
    <ul>
        <%= p.title%>
        <%= p.text%>
        <%= p.comments_counter%>
        <%= p.likes_counter%>
        <% p.most_recent_comments.each do |c|%>
          <%= c.user.name + ": " + c.text%>
        <% end %>
    </ul>
<%end%>
           